{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "esnext",
    "lib": ["esnext"],
    "alwaysStrict": false,
    "strict": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "types": [
      "@cloudflare/workers-types",
      "@types/jest",
      "@types/service-worker-mock"
    ],
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["./src", "./types"],
  "exclude": ["node_modules", "dist", "test"]
}
